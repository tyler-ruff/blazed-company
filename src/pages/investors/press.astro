---
import Layout from "@/layouts/Layout.astro";
import type { MenuItem } from "@/lib/types/menu";
import Tabs from "@/components/basic/Tabs.astro";
import { tabList } from "@/pages/investors/tabList";

const breadCrumb = [
    {
        title: "Home",
        path: "/"
    },
    {
        title: "Investors",
        path: "/investors/"
    },
    {
        title: "Press Releases"
    }
] as MenuItem[];
---

<Layout title="Investor Relations Press Releases" 
        description="Invest in Blazed Labs today!"
        breadcrumb={breadCrumb}>
    <h1>
        Press Releases
    </h1>
    <Tabs tabList={tabList} />
</Layout>
<style>
    h1{
        font-size: 36pt;
        padding: 2vi 0vi;
    }
</style>